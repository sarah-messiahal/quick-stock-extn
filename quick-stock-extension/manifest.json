{
    "manifest_version": 3,
    "name": "Quick Stock Viewer",
    "version": "1.0",
    "description": "View stock levels directly in your browser",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "host_permissions": ["https://dummyjson.com/*"],
    "icons": {
      "48": "icon.png"
    }
  }
  